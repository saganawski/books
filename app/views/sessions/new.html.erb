<h3>Log In</h3>

<% if @errors %>
	<% @errors.each do |error| %>
		<%= error %>
	<% end %>
<% end %>

<%= form_for :sessions, url: sessions_path do |f| %>
	<%= f.label :email %>
	<%= f.email_field :email %>
	<%= f.password_field :password %>
	<%= f.label :password %>

	<%= f.submit 'Log In' %>
<% end %>
